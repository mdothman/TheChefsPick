{
    "name": "thechefspick",
    "version": "1.0.0",
    "description": "You are the chef, now take your pick!",
    "main": "index.js",
    "author": "BEELZ <othmanmuhidean@gmail.com>",
    "license": "ISC",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:prod": "node server.js",
        "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
        "client": "cd client && npm run start",
        "seed": "node scripts/seedDB.js",
        "install": "cd client && npm install",
        "build": "webpack --env.ENVIRONMENT=production --config webpack.config.build.js",
        "heroku-postbuild": "npm run build",
        "dev": "webpack --env.ENVIRONMENT=development --config webpack.config.dev.js"
    },
    "repository": "https://github.com/mdothman/TheChefsPick.git",
    "private": false,
    "dependencies": {
        "axios": "^0.20.0",
        "concurrently": "^5.2.0",
        "dotenv": "^8.2.0",
        "per-env": "^1.0.2",
        "react-router-dom": "^5.2.0"
    },
    "devDependencies": {
        "webpack-cli": "^3.3.12"
    }
}
